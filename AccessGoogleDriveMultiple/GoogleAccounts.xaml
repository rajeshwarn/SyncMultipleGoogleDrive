<Window x:Class="SyncMultipleGoogleDrives.GoogleAccounts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GoogleAccounts" Height="300" Width="300">
    <Grid>
        <ComboBox x:Name="comboGoogleAccounts" ItemsSource="{Binding cbItems}" SelectedItem="{Binding SelectedcbItem}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="272"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="100,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" VerticalContentAlignment="Center"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.266,-0.009" Width="85" Height="23" Padding="0" VerticalContentAlignment="Center"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="10,239,0,0" VerticalAlignment="Top" Width="75" Click="btnSave_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="207,239,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnRemove" Content="Remove" HorizontalAlignment="Left" Margin="109,239,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
